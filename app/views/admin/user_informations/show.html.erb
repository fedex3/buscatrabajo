<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%=t('admin.show') + ' ' + "InformaciÃ³n CV Usuario"%></h1>
  </div>
  <div class="row">
    <div class="col-12">

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("name")%></label>
        <label class="form-label"><strong><%=@user.name%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("email")%></label>
        <label class="form-label"><%=@user.email%></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("country")%></label>
        <label class="form-label"><strong><%=@user.country%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("city")%></label>
        <label class="form-label"><strong><%=@user.city%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("born_year")%></label>
        <label class="form-label"><strong><%=@user.born_year%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("age")%></label>
        <label class="form-label"><strong><%=@user.age%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("language")%></label>
        <label class="form-label"><strong><%=@user.language%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("cv_status")%></label>
        <label class="form-label"><strong><%=@user.cv_status%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("study_level")%></label>
        <%if @user.study_level.present?%>
          <label class="form-label"><strong><%=@user.study_level.name%></strong></label>
        <%end%>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("job_areas")%></label>
        <label class="form-label">
          <strong>
            <% @user.job_areas.each do |job_area|%>
              <%= job_area.name.to_s + ' | '%>
            <%end%>
          </strong>
        </label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("rejected")%></label>
        <label class="form-label"><strong><%=@user.rejected%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("comment")%></label>
        <div class="advice-content">
          <%=@user.comment.html_safe%>
        </div>
      </div>

      <p>
        <%= link_to t('admin.edit'), edit_admin_user_information_path(@user), :class => "text" %><br>
        <%= link_to t('admin.back'), admin_user_informations_path, :class => "text" %><br>
      </p>
    </div>
  </div>
</main>
