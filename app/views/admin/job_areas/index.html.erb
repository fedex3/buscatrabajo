<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%=JobArea.human_attribute_name("job_area")%></h1>
    <%= link_to (t('admin.new') + ' ' + JobArea.human_attribute_name("job_area")), new_admin_job_area_path, class:"btn btn-primary" %>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed">
          <thead>
            <tr>
              <th><%=JobArea.human_attribute_name("name")%></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <% @job_areas.each do |job_area| %>
            <tr>
              <td><%= job_area.name_id %></td>
              <td><%= link_to t('admin.show'), admin_job_area_path(job_area) %></td>
              <td><%= link_to t('admin.edit'), edit_admin_job_area_path(job_area) %></td>
              <td><%= link_to t('admin.delete'), admin_job_area_path(job_area),
                      method: :delete,
                      data: { confirm: t('admin.confirm') } %></td>
            </tr>
          <% end %>
        </table>
      </div>
      <%= paginate @job_areas %>
    </div>
  </div>
</main>
