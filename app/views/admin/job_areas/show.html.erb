<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%=t('admin.show') + ' ' + JobArea.human_attribute_name("job_area")%></h1>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="form-group input-group-lg">
        <label class="form-label"><%=JobArea.human_attribute_name("name")%></label>
        <label class="form-label"><strong><%=@job_area.name%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=JobArea.human_attribute_name("name_id")%></label>
        <label class="form-label"><strong><%=@job_area.name_id%></strong></label>
      </div>

      <p>
        <%= link_to t('admin.edit'), edit_admin_job_area_path(@job_area), :class => "text" %><br>
        <%= link_to t('admin.back'), admin_job_areas_path, :class => "text" %>
      </p>
    </div>
  </div>
</main>
