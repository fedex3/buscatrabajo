<% if @job_area and @job_area.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% @job_area.errors.full_messages.take(5).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @job_area, :url => {:controller => "admin/job_areas", :action => action}  do |f| %>

  <div class="form-group input-group-lg">
    <%= f.label JobArea.human_attribute_name("name"), :class => "form-label"%>
    <%= f.text_field :name, autofocus: true, :class => "form-control" %>
  </div>

  <!--<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
  <div class="form-group">
    <%= f.submit  t('admin.submit') , :class => "btn btn-lg btn-primary btn-block", data: { disable_with: t('messages.sending') } %>
  </div>

  <p>
    <%= link_to t('admin.back'), admin_job_areas_path, :class => "text" %>
  </p>
 

<%end%>

