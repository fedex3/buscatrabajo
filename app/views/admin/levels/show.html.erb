<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= Level.human_attribute_name("level") %></h1>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="form-group input-group-lg">
        <label class="form-label"><%=Level.human_attribute_name("name")%></label>
        <label class="form-label"><strong><%=@level.name%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=Level.human_attribute_name("name_id")%></label>
        <label class="form-label"><strong><%=@level.name_id%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=Level.human_attribute_name("order")%></label>
        <label class="form-label"><strong><%=@level.order.to_s%></strong></label>
      </div>

      <p>
        <%= link_to t('admin.edit'), edit_admin_level_path(@level), :class => "text" %><br>
        <%= link_to t('admin.back'), admin_levels_path, :class => "text" %>
      </p>
    </div>
  </div>
</main>
