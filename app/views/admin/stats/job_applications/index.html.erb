<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Monthly Job Applications</h1>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed dailyTable table-admin" id="dailyTable">
           <style>
            @media (max-width: 767px) {
              .dailyTable td:nth-of-type(1):before { content: "Fecha"; }
              .dailyTable td:nth-of-type(2):before { content: "Company"; }
              .dailyTable td:nth-of-type(2):before { content: "Job"; }
              .dailyTable td:nth-of-type(3):before { content: "Job Applications"; }
            }
          </style>
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Company</th>
              <th>Position</th>
              <th>Job Applications</th>

            </tr>
          </thead>

          <% @job_applications.each do |job_application| %>
            <tr>
              <td><%= job_application.year.to_i.to_s + '-' + job_application.month.to_i.to_s%></td>
              <td><%= job_application.company_name.to_s %></td>
              <td><%= job_application.job_name.to_s %></td>
              <td><%= job_application.total_job_applications.to_s %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>
