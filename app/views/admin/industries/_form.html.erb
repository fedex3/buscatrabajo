<% if @industry and @industry.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% @industry.errors.full_messages.take(5).each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @industry, :url => {:controller => "admin/industries", :action => action}  do |f| %>

  <div class="form-group input-group-lg">
    <%= f.label Industry.human_attribute_name("name"), :class => "form-label"%>
    <%= f.text_field :name, autofocus: true, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit  t('admin.submit') , :class => "btn btn-lg btn-primary btn-block", data: { disable_with: t('messages.sending') } %>
  </div>

  <p><%= link_to t('admin.back'), admin_industries_path, :class => "text" %></p>
<%end%>
