<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%=t('admin.show') + ' ' + User.human_attribute_name("user")%></h1>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("name")%></label>
        <label class="form-label"><strong><%=@user.name%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("email")%></label>
        <label class="form-label"><strong><%=@user.email%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("admin")%></label>
        <label class="form-label"><strong><%=@user.admin%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("country")%></label>
        <label class="form-label"><strong><%=@user.country%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=User.human_attribute_name("provider")%></label>
        <label class="form-label"><strong><%=@user.provider%></strong></label>
      </div>

      <div class="form-group input-group-lg">
        <label class="form-label"><%=Newsletter.human_attribute_name("subscribe") + ' ' + Newsletter.human_attribute_name("newsletter")%></label>
        <label class="form-label">
          <strong>
            <%unless @user.newsletter.nil?%>
              <%=@user.newsletter.subscribe%>
            <%end%>
          </strong>
        </label>
      </div>

      <p>
        <%= link_to t('admin.edit'), edit_admin_user_path(@user), :class => "text" %><br>
        <%= link_to t('admin.back'), admin_users_path, :class => "text" %>
      </p>
    </div>
  </div>
</main>
