<h2><%=t('admin.show') + ' ' + JobApplication.human_attribute_name("job_application")%></h2>

<div class="form-group input-group-lg">
  <label class="form-label"><%=JobApplication.human_attribute_name("company")%></label>
  <label class="form-label"><strong><%=@job_application.job.company.name%></strong></label>
</div>

<div class="form-group input-group-lg">
  <label class="form-label"><%=JobApplication.human_attribute_name("job")%></label>
  <label class="form-label"><strong><%=@job_application.job.name%></strong></label>
</div>


<div class="form-group input-group-lg">
  <label class="form-label"><%=User.human_attribute_name("email")%></label>
  <label class="form-label"><strong><%=@job_application.email%></strong></label>
</div>

<%if @job_application.user.present?%>
<div class="form-group input-group-lg">
  <label class="form-label"><%=User.human_attribute_name("name")%></label>
  <label class="form-label"><strong><%=@job_application.user.name%></strong></label>
</div>
<%end%>

<%if @job_application.full%>
  <div class="form-group input-group-lg">
    <label class="form-label"><%=UserCv.human_attribute_name("cv")%></label>
    <a target="_blank" href="<%=@job_application.user_cv.cv.url%>">Ver CV</a>
  </div>
<%end%>

<div class="form-group input-group-lg">
  <label class="form-label"><%=JobApplication.human_attribute_name("comment")%></label>
  <label class="form-label"><strong><%=@job_application.comment%></strong></label>
</div>

<p>
  <%= link_to t('admin.back'), admin_job_applications_path, :class => "text" %><br>
</p>
